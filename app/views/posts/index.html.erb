<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Photo</th>
    <th>Description</th>
    <th colspan="4"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.image_url %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', user_post_path(@user, post) %></td>
      <% if current_user == @user %>
        <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(@user, post), method: :delete, data: { confirm: 'Are you shure?' } %></td>
      <% end %>
      <td><img src="/placeholders/like.png"> (<%= post.likes.count %>)</td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if current_user == @user %>
  <%= link_to 'New Post', new_user_post_path(@user) %>
<% end %>

